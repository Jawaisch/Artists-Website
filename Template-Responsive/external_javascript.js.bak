
/* Wechseln zwischen dem Hinzuf√ºgen und Entfernen der Klasse "responsive" zu topnav, wenn der Benutzer auf das Symbol klickt. */
function ResponsiveNav() {
  var x = document.getElementById("menu");
  if (x.className === "topnav") {
	x.className = "topnav";
  } else {	
	x.className += " responsive";
  }
}
